<header>
    <div class="top-container">
        <h1>Burns Burgers</h1>
        <h6><i class="small material-icons">restaurant_menu</i>
                Where calories don't matter<i class="small material-icons">restaurant_menu</i>
        </h6>
    </div>
</header>

<div class="flex-container">

    <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Burger Menu:</span>
              <hr>
                <ul>
                    {{#each burgers}}
                      {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                      {{/unless}}
                    {{/each}}
                </ul>
            </div>
          </div>
        </div>
      </div>

    <form class="create-form">
        <input type="text" id="input" name="name" placeholder="type burger name here">
        <button type="submit" id="submit-btn">Create
            <i class="small material-icons right">restaurant_menu</i>
        </button>
    </form>

     <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Devoured:</span>
          <hr>
            <ul>
                {{#each burgers}}
                  {{#if devoured}}
                    {{> burgers/burger-block devour=false}}
                  {{/if}}
                {{/each}}
            </ul>
        </div>
      </div>
    </div>
  </div>


</div>

<footer>
    <a href="/api/json">Burger API</a>
</footer>


